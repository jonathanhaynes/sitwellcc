    <% for(var i = 0; i < facebook.length; i++) { %>
        {
          "@context": "http://schema.org/",
          "@type": "Event",
          "name": "<%= facebook[i].title %>",
          "startDate": "<%= facebook[i].date.day %> <%= facebook[i].date.date %> <%= facebook[i].date.month %> <%= facebook[i].date.year %>",
          "location": {
            "place": "<%- facebook[i].location %>"
          }
        }
      <% if ((facebook.length > 1) && (i < facebook.length - 1)) { %>
