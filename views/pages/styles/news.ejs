<section class="primary-content layout--news">
  <h2>Our next club ride is</h2>
  <a href="<%= facebook[0].link %>">
    <h3><%= facebook[0].title %></h3>
    <ul>
      <li><%= facebook[0].date %></li>
      <li><%= facebook[0].location %></li>
    </ul>
  </a>
  <p>Leaving from the corner of <a href="https://goo.gl/maps/ArXDRXnkWEr">Turner Lane and High Street</a> at <%= facebook[0].time %>.</p>

  <h2>Latest news</h2>
  <% for(var i = 0; i < ghost.length; i++) { %>
    <% if (i <= 4) { %>
      <article class="post post--news">
        <a href="<%= ghost[i].link %>">
          <img src="<%= ghost[i].image %>" class="post__img">
          <h3 class="post__title"><%= ghost[i].title %></h3>
          <%- ghost[i].description.split('\n')[0] %>
        </a>
      </article>
    <% } %>
  <% } %>

</section>
