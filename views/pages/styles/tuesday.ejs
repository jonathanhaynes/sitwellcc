        {
          "@context": "http://schema.org/",
          "@type": "SportsEvent",
          "name": "<%= eventbrite[i].title %>",
          "Description": "<%- eventbrite[i].description.split('\n')[0] %>",
          "startDate": "<%= eventbrite[i].full_date %>",
          "location": {
            "@type": "Place",
            "name": "Sheffield",
            "address": "Wood Lane",
