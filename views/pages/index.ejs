<section class="block block--media-window">
  <picture>
    <source srcset="<%= asset_path('template/wide/media-window.jpg') %>" media="(min-width: 1200px)">
    <source srcset="<%= asset_path('template/desktop/media-window.jpg') %>, <%= asset_path('template/desktop/media-window-2x.jpg') %> 2x" media="(min-width: 960px)">
    <source srcset="<%= asset_path('template/tablet/media-window.jpg') %>, <%= asset_path('template/tablet/media-window-2x.jpg') %> 2x" media="(min-width: 600px)">
    <img srcset="<%= asset_path('template/mobile/media-window.jpg') %>, <%= asset_path('template/mobile/media-window-2x.jpg') %> 2x" alt="Sitwell Cycling Club">
  </picture>
</section>

<section class="block block--intro">
  <div class="wrap">
    <section class="intro intro--about">
      <h1 class="block__title"><a href="/about">Sitwell Cycling Club</a></h1>
      <p>Founded January 2016. Rotherham's newest cycling club serving Whiston and the surrounding areas.</p>
      <p>Come and join us for a club ride on a Wednesday evening or Sunday morning.</p>
      <p>Show us your stripes!</p>
      <p><a href="/about">Find out more</a></p>
    </section>
    <section class="intro intro--news">
      <h2 class="block__title"><a href="/news">Latest news</a></h2>
      <article class="post post--news">
        <a href="<%= ghost[0].link %>">
          <figure style="background-image: url(<%= ghost[0].image %>);" class="post__img"></figure>
          <div class="post__content">
            <h3 class="post__title"><%= ghost[0].title %></h3>
            <%- ghost[0].description.split('\n')[0] %>
          </div>
        </a>
      </article>
    </section>
  </div>
</section>

<section class="block block--rides">
  <div class="wrap">
    <h2 class="block__title"><a href="/club-rides">Club rides</a></h2>
    <section class="summary">
      <article class="summary__item">
        <h3 class="summary__title">Our next club ride is</h3>
        <a href="<%= facebook[0].link %>">
          <h4><%= facebook[0].title %></h4>
          <ul>
            <li><%= facebook[0].date %></li>
            <li><%= facebook[0].location %></li>
          </ul>
        </a>
        <p>Leaving from the corner of <a href="https://goo.gl/maps/ArXDRXnkWEr">Turner Lane and High Street</a> at <%= facebook[0].time %>.</p>
      </article>
      <article class="summary__item">
        <a href="/club-rides/wednesday-evening">
          <picture>
            <img src="<%= asset_path('template/wednesday.jpg') %>" alt="">
          </picture>
          <div>
            <h3 class="summary__title">Wednesday evening</h3>
            <p class="summary__desc">Around 1.5 hours at 13-14mph</p>
          </div>
        </a>
      </article>
      <article class="summary__item">
        <a href="/club-rides/saturday-morning">
          <picture>
            <img src="<%= asset_path('template/saturday.jpg') %>" alt="">
          </picture>
          <div>
            <h3 class="summary__title">Saturday morning</h3>
            <p class="summary__desc">Around 2.5 hours plus café stop at 11-12mph</p>
          </div>
        </a>
      </article>
      <article class="summary__item">
        <a href="/club-rides/sunday-morning">
          <picture>
            <img src="<%= asset_path('template/sunday.jpg') %>" alt="">
          </picture>
          <div>
            <h3 class="summary__title">Sunday morning</h3>
            <p class="summary__desc">Around 4 hours plus café stop at 13-14mph</p>
          </div>
        </a>
      </article>
    </section>
    
  </div>
</section>
<section class="block block--social">
  <div class="wrap">
    <h2 class="block__title">Follow us on social media</h2>
    <section class="flex">
      <% for(var i = 0; i < instagram.length; i++) { %>
        <a href='<%= instagram[i].link %>'>
          <picture>
            <img src="data:image/gif;base64,R0lGODlhAQABAIAAAP///wAAACH5BAEAAAAALAAAAAABAAEAAAICRAEAOw==" srcset="<%= instagram[i].src %>" alt="<%= instagram[i].caption %>" class="lazyload">
          </picture>
        </a>
      <% } %>
    </section>
  </div>
</section>
