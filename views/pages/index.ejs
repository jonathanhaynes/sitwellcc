<section class="block block--rides">
  <div class="wrap">
    <h2 class="block__title"><a href="/club-rides">Upcoming club rides</a></h2>
    <section class="summary">
      <article class="summary__item">
        <% for(var i = 0; i < facebook.length; i++) { %>
          <% if (i <= 0) { %>
              <h3 class="summary__title"><a href="<%= facebook[i].link %>"><%= facebook[i].title %></a><br /><small><%= facebook[i].location %></small></h3>
              <time class="summary__desc"><%= facebook[i].date %></time>
          <% } %>
        <% } %>
      </article>
      <article class="summary__item">
        <a href="/club-rides/wednesday-evening">
          <picture>
            <img src="<%= asset_path('template/wednesday.jpg') %>" alt="">
          </picture>
          <div>
            <h3 class="summary__title">Wednesday evening</h3>
            <p class="summary__desc">Around 1.5 hours at 13-14mph</p>
          </div>
        </a>
      </article>
      <article class="summary__item">
        <a href="/club-rides/saturday-morning">
          <picture>
            <img src="<%= asset_path('template/saturday.jpg') %>" alt="">
          </picture>
          <div>
            <h3 class="summary__title">Saturday morning</h3>
            <p class="summary__desc">Around 2.5 hours at 11-12mph</p>
          </div>
        </a>
      </article>
      <article class="summary__item">
        <a href="/club-rides/sunday-morning">
          <picture>
            <img src="<%= asset_path('template/sunday.jpg') %>" alt="">
          </picture>
          <div>
            <h3 class="summary__title">Sunday morning</h3>
            <p class="summary__desc">Around 4 hours plus caf√© stop at 13-14mph</p>
          </div>
        </a>
      </article>
    </section>
    
  </div>
</section>
<section class="block block--instagram">
  <!-- <h2 class="block__title"><a href="https://instagram.com/sitwellcc">Follow us on Instagram</a></h2> -->
  <div class="wrap" data-js="flickity">
    <% for(var i = 0; i < instagram.length; i++) { %>
      <a href='<%= instagram[i].link %>'>
        <picture>
          <img src="data:image/gif;base64,R0lGODlhAQABAIAAAP///wAAACH5BAEAAAAALAAAAAABAAEAAAICRAEAOw==" srcset="<%= instagram[i].src %>" alt="<%= instagram[i].caption %>" class="lazyload">
        </picture>
      </a>
    <% } %>
  </div>
</section>
