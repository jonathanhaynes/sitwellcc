<section class="block block--intro">
  <div class="wrap">
    <section class="intro intro--news">
      <article class="post post--news">
        <a href="<%= ghost[0].link %>">
          <figure style="background-image: url(<%= ghost[0].image %>);" class="post__img"></figure>
          <div class="post__content">
            <h3 class="post__title"><%= ghost[0].title %></h3>
            <%- ghost[0].description.split('\n')[0] %>
          </div>
        </a>
      </article>
    </section>
    <section class="intro intro__wrapper">
      <section class="intro intro--about">
        <a href="/about">
          <p>Founded January 2016. We're Rotherham's newest cycling club serving Whiston and the surrounding areas.</p>
          <p>Come and join us for a club ride to see what you're missing out on.</p>
          <p>Find out more here.</p>
        </a>
      </section>
      <section class="intro intro--rides">
        <a href="/membership">
          <h3 class="post__title">Join us!</h3>
          <p>We're a friendly, social bunch. Come and see what you're missing out on.</p>
          <p>More information on club membership can be found here.</p>
        </a>
      </section>
    </section>
  </div>
</section>

<section class="block block--rides">
  <div class="wrap">
    <h2 class="block__title"><a href="/club-rides">Club rides</a></h2>
    <section class="summary">
      <article class="summary__item">
        <a href="/club-rides/chaingang-tuesday">
          <picture>
            <img src="<%= asset_path('template/tuesday.jpg') %>" alt="">
          </picture>
          <div>
            <h3 class="summary__title">Chaingang Tuesday</h3>
            <p class="summary__desc">60 minutes race craft in a traffic free environment <br> <em>Members Only</em></p>
          </div>
        </a>
      </article>
      <article class="summary__item">
        <a href="/club-rides/wing-it-wednesday">
          <picture>
            <img src="<%= asset_path('template/wednesday.jpg') %>" alt="">
          </picture>
          <div>
            <h3 class="summary__title">Wing it Wednesday™</h3>
            <p class="summary__desc">Around 90 minutes <br> Road (~15mph) <br> MTB (~10mph)</p>
          </div>
        </a>
      </article>
      <article class="summary__item">
        <a href="/club-rides/saturday-saunter">
          <picture>
            <img src="<%= asset_path('template/saturday.jpg') %>" alt="">
          </picture>
          <div>
            <h3 class="summary__title">Saturday Saunter</h3>
            <p class="summary__desc">Around 2.5 hours plus café stop at ~13mph</p>
          </div>
        </a>
      </article>
      <article class="summary__item">
        <a href="/club-rides/sunday-cafe-run">
          <picture>
            <img src="<%= asset_path('template/sunday.jpg') %>" alt="">
          </picture>
          <div>
            <h3 class="summary__title">Sunday Café Run</h3>
            <p class="summary__desc">Around 4 hours plus café stop at ~15mph</p>
          </div>
        </a>
      </article>
    </section>

  </div>
</section>
<section class="block block--social">
  <div class="wrap">
    <h2 class="block__title">Follow us on social media</h2>
    <section class="flex">
      <% for(var i = 0; i < instagram.length; i++) { %>
        <a href='<%= instagram[i].link %>'>
          <picture>
            <img src="data:image/gif;base64,R0lGODlhAQABAIAAAP///wAAACH5BAEAAAAALAAAAAABAAEAAAICRAEAOw==" srcset="<%= instagram[i].src %>" alt="<%= instagram[i].caption %>" class="lazyload">
          </picture>
        </a>
      <% } %>
    </section>
  </div>
</section>
